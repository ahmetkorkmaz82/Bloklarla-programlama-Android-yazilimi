<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/elma"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:foregroundGravity="left"
        android:gravity="center_vertical"
        android:src="@drawable/matematik" />
    <ImageView
        android:id="@+id/isik"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="1.5dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/kirmiziisik"
        app:layout_constraintBottom_toBottomOf="@+id/ikinciDegiskenDegToDeg"
        app:layout_constraintLeft_toLeftOf="@+id/elma"
        app:layout_constraintStart_toStartOf="@+id/elma" />
    <ImageView
        android:id="@+id/anaDegToDeg"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="30dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/elma"
        app:layout_constraintTop_toTopOf="@+id/ikinciDegiskenDegToDeg"
        app:layout_constraintStart_toStartOf="@+id/elma" />
    <ImageView
        android:id="@+id/esitsign"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="0.5dp"
        android:tint="@color/hareket"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/esit"
        app:layout_constraintBottom_toBottomOf="@+id/ikinciDegiskenDegToDeg"
        app:layout_constraintStart_toStartOf="@+id/elma" />
    <ImageView
        android:id="@+id/birinciDegiskenDegToDeg"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="71dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/elma"
        app:layout_constraintBottom_toBottomOf="@+id/ikinciDegiskenDegToDeg"
        app:layout_constraintStart_toStartOf="@+id/elma" />
    <ImageView
        android:id="@+id/isaretDegToDeg"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="1dp"
        android:tint="@color/hareket"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/arti"
        app:layout_constraintBottom_toBottomOf="@+id/ikinciDegiskenDegToDeg"
        app:layout_constraintStart_toStartOf="@+id/elma" />
    <ImageView
        android:id="@+id/ikinciDegiskenDegToDeg"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="109dp"
        android:layout_marginBottom="7dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/elma"
        app:layout_constraintBottom_toBottomOf="@+id/elma"
        app:layout_constraintStart_toStartOf="@+id/elma"
        app:layout_constraintTop_toTopOf="@+id/elma" />


</android.support.constraint.ConstraintLayout>