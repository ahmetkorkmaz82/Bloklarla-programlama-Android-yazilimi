<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/portakal"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:foregroundGravity="left"
        android:gravity="center_vertical"
        android:src="@drawable/degisken" />
    <ImageView
        android:id="@+id/isik"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="2.5dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/kirmiziisik"
        app:layout_constraintBottom_toBottomOf="@+id/degText"
        app:layout_constraintLeft_toLeftOf="@+id/portakal"
        app:layout_constraintStart_toStartOf="@+id/portakal" />
    <ImageView
        android:id="@+id/portakalsign"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/portakal"
        app:layout_constraintBottom_toBottomOf="@+id/degText"
        app:layout_constraintStart_toStartOf="@+id/portakal" />
    <ImageView
        android:id="@+id/esitsign"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="2dp"
        android:tint="@color/hareket"
        android:adjustViewBounds="true"
        android:background="@color/translucent"
        android:src="@drawable/esit"
        app:layout_constraintBottom_toBottomOf="@+id/degText"
        app:layout_constraintStart_toStartOf="@+id/portakal" />
    <TextView
        android:id="@+id/degText"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="8dp"
        android:background="@color/translucent"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="@font/trkids"
        android:text="33"
        app:layout_constraintBottom_toBottomOf="@+id/portakal"
        app:layout_constraintStart_toStartOf="@+id/portakal"
        app:layout_constraintTop_toTopOf="@+id/portakal"
        />

</android.support.constraint.ConstraintLayout>